<Window x:Class="WpfSampleContainer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="300" Width="300"
        Icon="/Resources/Logo.ico">
    <DockPanel LastChildFill="True">
        <StackPanel Orientation="Vertical" DockPanel.Dock="Top" Background="#99000000">
            <Menu Background="#00CCFF" Margin="0,0,0,1" Height="25" Padding="0,3,0,3">
                <MenuItem Name="MainMenuBar" Background="Transparent" BorderThickness="0"
                          Header="Samples" />
            </Menu>
        </StackPanel>
        
        <Grid Name="CurrentSampleContainer" />
    </DockPanel>
</Window>
