<ResourceDictionary x:Class="GlobalResources"
                    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:loc="clr-namespace:FrozenSky.RKKinectLounge.Modules.Multimedia">
    
    <!-- DataTemplates following the ViewModelFirst pattern -->
    <DataTemplate DataType="{x:Type loc:ImageViewModel}">
        <Image Source="{Binding Path=ImageSoure}" Stretch="UniformToFill" />
    </DataTemplate>
    <DataTemplate DataType="{x:Type loc:VideoViewModel}">
        <loc:VideoView />
    </DataTemplate>
    <DataTemplate DataType="{x:Type loc:Object3DViewModel}">
        <loc:Object3DView />
    </DataTemplate>

</ResourceDictionary>