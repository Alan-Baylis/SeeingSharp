<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:loc="clr-namespace:SeeingSharp.RKKinectLounge.Modules.Kinect">

    <!-- DataTemplates following the ViewModelFirst pattern -->
    <DataTemplate DataType="{x:Type loc:SceneViewModel}">
        <loc:SceneView />
    </DataTemplate>
    <DataTemplate DataType="{x:Type loc:KinectDashboardViewModel}">
        <loc:KinectDashboardView />
    </DataTemplate>

</ResourceDictionary>